
<%= render "/articles/header" %>

<div class="loginPage">

  <h2>Log in / Registration</h2>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= form_for "Login",
      url: omniauth_authorize_path(resource_name, provider),
      method: :post,
      data: {turbo: "false"} do |f| %>
        <%= f.submit "Login", type: "image", src: url_for("/assets/google_oauth.png"), class: "loginImage" %>
      <% end %>
    <% end %>
  <% end %>
</div>

