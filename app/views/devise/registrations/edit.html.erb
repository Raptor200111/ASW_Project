
<h1>Edit Profile</h1>

<% if current_user.avatar.attached? %>
    <% current_user.avatar.variant(resize: "#{100}Ã—#{100}!") %>
<% else %>
    <%= image_tag current_user.avatar_url, size: 100 %>
<% end %>

<%= button_to "Change", current_user.avatar.url = "/assets/a-avatar.jpg" %>

<%= form_for current_user do |f| %>
    <%= f.label :avatar %>
    <%= f.file_field :avatar, multipart: true %>
    <%= f.submit 'Save' %>
<% end %>

<% if false %>
    <%= image_tag current_user.avatar.variant(:thumb) %>
    <%= form.file_field :avatar, multipart: true, direct_upload: true %>
<% end %>


<%= button_to "LogOut", destroy_user_session_path, data: {turbo: "false"}, method: :delete %>

<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>

