<p style="color: green"><%= notice %></p>

  <div id="middle" class="page-entry-single">
    <div class="kbin-containerL">
      <main id="main">
        <div id="content">
          <%=render @article %>
          <!--%= render partial: 'article', locals: { article: @article } %-->

          <div class="secHeader">
            <div class="filter">
              <div>
                <span>top</span>
                <span id="activeFilter">hot</span>
                <span>oldest</span>
                <span>newest</span>
                <span>active</span>
              </div>
              <div class="filterIcons">
                <span>icon</span>
              </div>
            </div>
          </div>
          <!--
          <div class="body">-->
            <div class="articles" id="commentDiv">
              <%= form_with(model: [@article, @article.comments.build]) do |f| %>
                <%= f.text_area :body, class: "commentBox" %>
                <%= f.submit 'Add comment', class: "addCommentButton" %>
              <% end %>
            </div>
          <!--</div>-->

          <div  id="comments">
              <h2>Comments</h2>
              <% @article.comments.order(created_at: :desc).each do |comment| %>
                <% unless comment.parent_id %>
                  <%= render comment %>
                <% end %>
              <% end %>
              <%#= render @article.comments.order(created_at: :desc) %>
          </div>

          <%= link_to "Edit this article", edit_article_path(@article) %> |
          <%= link_to "Back to articles", articles_path %>
          <%= button_to "Delete this article", @article, method: :delete %>
        </div>
      </main>
    </div>
  </div>
<br>