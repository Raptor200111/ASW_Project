<%= stylesheet_link_tag 'viewThread', media: 'all' %>

<h1>Editing article</h1>

<div id="middle" class = "page-entry-edit-article">
  <div class="kbin-containerL">
    <main id="main">
      <%= render partial: 'short_article', locals: { article: @article } %>
      <div id="content" class="section">
        <div class="body">
          <div class="articles">
            <% @show_url_field = @article.url_required? %>
            <span id="form"><%= render "form", article: @article , show_url_field: @show_url_field,create_article: false %></span>
          </div>
        </div>
        <br>
        <div class="container">
          <%= link_to "Show this article", @article %> |
          <%= link_to "Back to articles", articles_path %>
        </div>
      </div>
    </main>
  </div>
</div>

