<link href='https://fonts.googleapis.com/css?family=Varela Round' rel='stylesheet'>

<header class="header">
  <div class="kbin-container">
    <div class="left-nav">
      <div class="sr-nav">
        <img id="hiddenMenu" src="https://i.pinimg.com/originals/26/9d/d1/269dd16fa1f5ff51accd09e7e1602267.png">
        <img src="https://kbin.social/kbin_logo.svg" alt="kbin logo">
      </div>
      <div class="head-nav">
        <span><%= link_to "Threads", articles_path %></span>
        <span>Microblog</span>
        <span>All content</span>
        <span id="activeFilter">Magazines</span>
        </ul>
      </div>
    </div>
    <div class="menu">
      <span class="icon"><img src="https://img.icons8.com/ios/50/FFFFFF/search--v1.png"></span>
      <span class="icon"><img src="https://img.icons8.com/ios/50/FFFFFF/add--v1.png"></span>
      <span class="icon"><img src="https://img.icons8.com/ios-filled/50/FFFFFF/menu-2.png"></span>
      <span><span>username</span></span>
    </div>
  </div>
</header>

<div class="secHeader">
  <div class="filter">
    <div>
      <span>top</span>
      <span id="activeFilter">hot</span>
      <span>newest</span>
      <span>active</span>
      <span>commented</span>
    </div>
    <div class="filterIcons">
      <span>menu</span>
      <span>time</span>
      <span>filter</span>
    </div>
  </div>
</div>

<p style="color: green"><%= notice %></p>

<div class="container">
	<table>
		<thead>
      <tr>
  			<th>Name</th>
        <th><%=link_to "Threads", :sort => "threads"%></th>
        <th><%=link_to "Comments", :sort => "comments"%></th>
        <th><%=link_to "Subscriptions", :sort => "subs"%></th>
		  </tr>
    </thead>
		<tbody>
  		<% @magazines.each do |magazine| %>
  		<% magazine.nComms = 0 %>
  			<tr>
  				<th><%= link_to magazine.name, magazine_path(magazine) %></th>
  				<th><%= magazine.articles.size %></th>
    				<%= magazine.articles.each do |article| %>
    				  magazine.nComms += article.comments.size
    				<% end %>
  				<th><%= magazine.nComms %></th>
  				<th><%= magazine.subscribers.size %><%= button_to !current_user.nil? && current_user.subscriptions.find_by(magazine: magazine) ? "Unsubscribe" : "Subscribe", subscribe_magazine_path(magazine), method: :put %></th>
  			</tr>
  		<% end %>
		</tbody>
	</table>

	  <%= link_to "New magazine", new_magazine_path %>
</div>